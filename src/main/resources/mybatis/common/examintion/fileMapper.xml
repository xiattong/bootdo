<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.examination.dao.ManagementDao">

	<select id="get" resultType="com.bootdo.examination.domain.ManagementDO">
		select id,file_name,file_path,create_time from file_management where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.examination.domain.ManagementDO">
		select id,file_name,file_path,create_time from file_management
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="fileName != null and fileName != ''"> and file_name = #{fileName} </if>
		  		  <if test="filePath != null and filePath != ''"> and file_path = #{filePath} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from file_management
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="fileName != null and fileName != ''"> and file_name = #{fileName} </if>
		  		  <if test="filePath != null and filePath != ''"> and file_path = #{filePath} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.examination.domain.ManagementDO">
		insert into file_management
		(
			`id`, 
			`file_name`, 
			`file_path`, 
			`create_time`
		)
		values
		(
			#{id}, 
			#{fileName}, 
			#{filePath}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.examination.domain.ManagementDO">
		update file_management 
		<set>
			<if test="fileName != null">`file_name` = #{fileName}, </if>
			<if test="filePath != null">`file_path` = #{filePath}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from file_management where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from file_management where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>